.product
	position relative
	&-article
		color #b3b3b3
		font-size 14px
		margin-bottom 50px
		h1 + &
			margin-top -14px
	&-detail
		position relative
		float right
		width 84%
		overflow hidden
		@media (max-width: 655px)
			float none
			width auto
		&-item
			position relative
			content-center(100%, 435px)
			@media (max-width: 655px)
				height 320px
			&:focus
				outline 0
	&-slider
		position relative
		float left
		width 13%
		overflow hidden
		.slick-list
			@media (min-width: 655px)
				height 435px!important
		.slick-next
			bottom -10px
		@media (max-width: 655px)
			float none
			width auto
		&-video
			text-align center
			text-transform uppercase
			color #b3b3b3
			font-size 15px
			position: absolute;
			top: 0;
			bottom: 0;
			left: 0;
			right: 0;
			margin: auto;
			max-height: 100%;
			max-width: 100%;
			height 57px
			span
				display block
			img
				margin-bottom 2px
				display inline-block
		.slick-list
			padding 0!important
		&-item
			position relative
			height 70px!important
			margin-bottom 21px
			cursor pointer
			trans()
			& > img
				position: absolute;
				top: 0;
				bottom: 0;
				left: 0;
				right: 0;
				margin: auto;
				max-height: 100%;
				max-width: 100%;
			&.slick-current
				opacity 0.4
			&:hover
				opacity 0.8
			&:focus
				outline 0
	&-price
		color #f27151
		font-size 28px
		font-weight bold
		display inline-block
		float right
		margin-right 10px
		margin-top 10px
		vertical-align middle

	&-social
		text-align center
		color #b3b3b3
		margin-bottom 55px
		font-size 14px
		@media (max-width: 992px)
			margin-bottom 30px
		&-text, .soc
			display inline-block
			vertical-align middle
			min-height inherit

		.soc li a
			background-color #ccc
			&:hover
				background: #2d99f1;
	&-action

		@media (max-width: 992px)
			margin-bottom 30px
		@media (max-width: 560px)
			margin-bottom 9px
			& > *
				display: block;
				width: 100%;
				margin: 0 0 12px;
				text-align: center;
