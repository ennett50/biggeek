.filter-info
	position relative
	&-text
		width 48%
		position relative
		margin-bottom 20px
		input[type="text"]
			color #808080
			padding-left 30px
		&.left
			&:before
				content 'от'
				position absolute
				color #808080
				font-size 14px
				top: 7px;
				left: 13px;
		&.right
			&:before
				content 'до'
				position absolute
				color #808080
				font-size 14px
				top: 7px;
				left: 13px;
		&-value
			color #b3b3b3
			font-weight 300
			font-size 14px