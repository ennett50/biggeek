.catalog-filter
	position relative
	margin-bottom 40px
	@media (max-width: 770px)
		margin-bottom 20px
	.falseLink
		margin-top 5px
		margin-bottom 0
		&.__active
			color #b3b3b3
			margin-bottom 13px
			border-color #b3b3b3
	&-item
		font-family 'Ubuntu', Arial, sans-serif;
		font-size 14px
		color #808080
		& + .catalog-filter-item .catalog-filter-category
			border-top 0
		&.__active
			display block!important
	&-clear
		&:before
			content ''
			display inline-block
			background-image images("icons/icon-close.png")
			background-position 50% 50%
			background-repeat no-repeat
			width 9px
			height 9px
			cursor pointer
	&-category
		background #fafafa
		padding 8px 10px
		border 1px solid #e6e6e6
		position relative
		cursor pointer
		trans()
		span
			display inline-block
			vertical-align middle
			margin-right 10px
		&:after
			content ''
			position absolute
			right 13px
			top 50%
			margin-top -3px
			sprite($s-select-arrow)
		&:hover, &._active
			background #f5f5f5
			&:after
				sprite($s-select-arrow-dark)
		&.__active
			&:hover
				&:after
					sprite($s-select-arrow-top)
			&:after
				sprite($s-select-arrow-up)

	&-content
		display none
		padding 10px
		border 1px solid #e6e6e6
		border-top 0
		& + .catalog-filter-item
			border-top 0
		&.__active
			display block
	&-list
		margin-bottom 5px
		@media (max-width: 992px)
			display inline-block
			vertical-align middle
			margin-left -3px
			width 20%
		@media (max-width: 640px)
			width 50%
		@media (max-width: 460px)
			width 100%
	&-more
		cursor: pointer
		text-decoration underline
	&-search
		opacity 0
		visibility hidden
		height 0
		position relative
		> input[type="text"]
			padding 0 30px 0 12px
		&-clear
			position absolute
			top: 12px;
			cursor pointer
			right: 10px;
			&:after
				content ''
				display block
				sprite($s-clear-search)
		&.__active
			opacity 1
			visibility visible
			height auto
	&-btn
		border 1px solid #ebebeb
		box-shadow 0 0 1px #f7f7f7
		text-align center
		height 40px;
		line-height 40px;
		color #6a3b6b
		font-size 16px
		cursor pointer
		&.__active
			color #b3b3b3
			&:after
				background-image images("icons/icon-close.png")
				background-position 50% 50%
				background-repeat no-repeat
		&:after
			content ''
			sprite($s-btn-filter)
			display inline-block
			vertical-align middle
			margin-left 5px